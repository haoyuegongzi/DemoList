<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haoyue.demo_list.download.DownLoadServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btStartDown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Start \n DownLoad"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btPauseDown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pause \n DownLoad"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btCancelDown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel \n DownLoad"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
