<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoyue.demo_list.finger_path.FingerPathActivity">

    <FrameLayout
        android:id="@+id/flFingerPath"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvFingerPath"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="重置Paint"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#0ff0af"
            android:layout_below="@+id/flFingerPath"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvFingerLineTo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="直线LineTo"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#0ff0af"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/flFingerPath"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvFingerQuadTo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="贝塞尔QuadTo"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#0ff0af"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/flFingerPath"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
